{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    
<div class="container">
    <h1>Articles List</h1>
    <table class="table">
        <thead>
            <tr class="table-primary">
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td class="grid gap-3">
                    <a class="p-2 g-col-6" href="{{ path('app_article_show', {'id': article.id}) }}">Read</a>
                    <a class="p-2 g-col-6" href="{{ path('app_article_edit', {'id': article.id}) }}">Edit</a>
                    {{ include('article/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_article_new') }}">Generate more articles</a>

</div>

{% endblock %}
